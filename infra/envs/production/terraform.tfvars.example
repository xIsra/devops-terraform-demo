# Copy to terraform.tfvars or <env>.tfvars and fill in values
# These files are gitignored - DO NOT COMMIT SECRETS

# Cluster Configuration
environment       = "production"
cluster_name      = "devops-demo"
kubernetes_version = "v1.29.2"  # Optional, defaults to v1.29.2

# Service versions (image tags)
resume_agent_version = "latest"
server_version       = "latest"
web_version          = "latest"

# Replicas per service
resume_agent_replicas = 2
server_replicas       = 2
web_replicas          = 2

# Secrets - FILL THESE IN
openai_api_key = "sk-your-key-here"

# Database credentials
# Note: DATABASE_URL is automatically generated by Terraform from these credentials
db_username     = "postgres"
db_password     = "postgres"
db_name         = "postgres"
db_storage_size = "5Gi"

# Ingress Configuration
ingress_host = "devops-demo.local"  # Add to /etc/hosts: 127.0.0.1 devops-demo.local

# Optional
openai_model = "gpt-4o-mini"
